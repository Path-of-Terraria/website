{
	"name": "pot-website",
	"description": "Website for Path of Terraria",
	"version": "0.0.1",
	"packageManager": "pnpm@9.15.9",
	"scripts": {
		"dev": "vite dev",
		"dependencies:check": "pnpm dlx npm-check-updates",
		"dependencies:update": "pnpm dlx npm-check-updates -u",
		"dependencies:update:patch": "pnpm dlx npm-check-updates -u --target patch",
		"dependencies:update:minor": "pnpm dlx npm-check-updates -u --target minor",
		"build": "vite build",
		"start": "vite --port 80 --host",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "3.3.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.15.21",
		"@zerodevx/svelte-toast": "0.9.6",
		"autoprefixer": "^10.4.21",
		"axios": "^1.9.0",
		"flowbite": "^2.5.2",
		"flowbite-svelte": "^0.48.6",
		"flowbite-svelte-icons": "^2.1.1",
		"openapi-typescript": "^7.8.0",
		"postcss": "^8.5.3",
		"svelte": "5.33.1",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "6.3.5"
	},
	"type": "module"
}